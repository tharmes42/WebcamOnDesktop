<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <AcrylicBrush
        x:Key="AppChromeAcrylicHostBackdropMediumLowBrush"
        BackgroundSource="HostBackdrop"
        FallbackColor="{ThemeResource SystemChromeMediumColor}"
        TintColor="{ThemeResource SystemChromeLowColor}"
        TintOpacity="0.7" />

    <AcrylicBrush
        x:Key="AppMaxAcrylicBackgroundBrush"
        BackgroundSource="HostBackdrop"
        FallbackColor="{ThemeResource SystemChromeMediumColor}"
        TintColor="{ThemeResource SystemChromeLowColor}"
        TintOpacity="0" />


    <Style x:Key="PageStyle" TargetType="Page">
        <Setter Property="Background" Value="{ThemeResource ApplicationPageBackgroundThemeBrush}" />
        <!--<Setter Property="Background" Value="{ThemeResource AppMaxAcrylicBackgroundBrush}" />-->
    </Style>


    <Style x:Key="TitleTextButtonStyle" TargetType="Button">
        <Setter Property="FontWeight" Value="SemiLight" />
        <Setter Property="FontSize" Value="24" />
    </Style>


    <Style x:Key="HighlightedFaceBoxStyle" TargetType="Rectangle">
        <Setter Property="Fill" Value="Transparent" />
        <Setter Property="Stroke" Value="Yellow" />
        <Setter Property="StrokeThickness" Value="2" />
    </Style>
</ResourceDictionary>
